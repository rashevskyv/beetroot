@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import '_sprite.styl'

*
  box-sizing border-box
  padding 0
  margin 0
  transition: all .02s ease-in

html
  font-size baseFontSize
  height 100%
  line-height 1.3

body
  height 100%
  color baseColor
  font 300 14px / 1.5 mainFont

h1, h2, h3, h4, h5, h6
  margin-bottom: rem(50px)
  letter-spacing 0.16em
  text-transform uppercase
  font-weight: 700

ul, li
  list-style-type none
  margin 0
  padding 0

p
  margin 0

a
  color black
  text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
  vertical-align middle

textarea
  resize none

section
  position relative

input,
select,
button
  outline none

*, *:before, *:after
  box-sizing border-box

.wrapper
  display flex
  flex-direction column
  height 100%

//horizontal-center()

.content
  flex 1 0 auto
  overflow hidden

//position relative

//Модули
@import "modules/modules.styl"

// СТРАНИЦЫ
// Главная страница
@import 'pages/index/index.styl'

//icons

.icon
  stroke oppositeColor

.icon-logo
  size(rem(70px), rem(70px))
  margin-bottom: 10%

.icon-scroll
  size(rem(40px), rem(27px))

//links

a:hover
  opacity 0.6

//header

.ba-wrapper
  center()

.ba-header
  background: baseBG url("../img/hero.png") 100% 0 no-repeat
  background-size cover
  color oppositeColor
  min-height 100vh
  size(100%, 100%)
  max-height 100vh
  overflow hidden
  display flex
  align-items center
  justify-content center
  &__title
    font-size: rem(54px)
  &__text
    margin-bottom 17%
    line-height: rem(29px)
    text-transform: uppercase
    letter-spacing 0.16em

.ba-container
  width 80vw
  //height: 100%
  max-width rem(900px)
  margin: 0 auto
  text-align: center
  font-size rem(15px)
  font-weight: 300
  line-height: rem(24px)
  padding-top: rem(40px)
//position relative

//box

.ba-box
  border: 2px baseColor solid
  border-width: 0 2px 2px
  padding rem(70px) 15vw 0 15vw
  position relative
  //height 60%

  &__text
    margin-bottom rem(30px)
    font-size: rem(16px)

  &__title
    font-size: rem(34px);
    position absolute
    left 0
    top: 0
    width: 100%
    transform translateY(-50%)

    &:before, &:after
      content ''
      display block
      position absolute
      height: 2px
      background: baseColor;
      width: 30%
      top: 50%
    &:before
      left: 0
    &:after
      right: 0

.ba-half-height
  position relative
  height: 50vh

.mobile
  display none !important

//services

.ba-services
  background: baseColor url("../img/services.png") 100% 0 no-repeat
  background-size cover
  color oppositeColor

.ba-light
  border-color oppositeColor;
  &:before, &:after
    background: oppositeColor;

.ba-what-we-do__title
  > .icon
    stroke baseColor
    fill baseColor
    size(rem(80px))
    margin-bottom: rem(35px)

  &-text
    margin-bottom: rem(30px)

.ba-what-we-do__article:not(:last-child)
  margin-bottom: rem(100px)

.ba-what-we-do
  padding rem(40px) 0 0 0

.empty
  size(100%, rem(40px))

button
  background-color: baseColor
  color oppositeColor
  text-transform uppercase
  font-size: rem(16px)
  line-height: rem(26px)
  letter-spacing 0.16em
  width: 80%
  padding 15px 0
  margin-bottom: rem(25px)
  border: none
  font-weight: 700
  &:hover
    opacity 0.8
  &:active
    opacity 0.6

.ba-columns
  margin: 0
  width: 100vw
  max-width 100vw
  position relative
  top: -5px
  > .row
    height 25vh
    > div
      border: 5px #fff solid
      color oppositeColor
      text-transform uppercase
      position relative
      &:hover
        opacity 0.8
        cursor pointer
      &:active
        opacity 0.6

.ba-columns__name
  font-size: rem(34px)
  letter-spacing: 0.16em
  font-weight: 700
  position absolute
  bottom: 3vw
  left: 3vw

.topworkz
  background: baseColor url("../img/topwrokz.png")
  background-size cover

.joint
  background: baseColor url("../img/joint.png")
  background-size cover

.market
  background: baseColor url("../img/market.png")
  background-size cover

.worktop
  background: baseColor url("../img/worktop.png")
  background-size cover

.lable
  background: baseColor url("../img/lable.png")
  background-size cover

.kyiv
  background: baseColor url("../img/kyiv.png")
  background-size cover

.footer
  display flex
  flex-direction row
  justify-content center
  align-items center
  > .icon
    stroke baseColor
    size(rem(30px))
    margin: 0
    margin-right: rem(20px)

+for_media_maxwidth(900px)
  //.mobile
  //	display flex!important
  .ba-box
    &__title
      &:before, &:after
        width: 19%

+for_media_maxheight(700px)
  //.mobile
  //	display flex!important
  .ba-half-height
    height: 65vh

+for_media(mobile)
  .ba-container
    width: 90vw

  .ba-box
    padding rem(35px)

  .ba-half-height
    height: 65vh

  .ba-columns > .row
    height: 35vh

+for_media_maxwidth(375px)
  .ba-header__title
    font-size: rem(40px);

  .ba-box
    &__title
      &:before, &:after
        width: 0
    border: 0
    padding rem(10px)
    padding-top: rem(35px)

  .icon
    transform scale(0.7)
    margin-bottom: rem(8px)!important

  .ba-what-we-do__article
    margin: rem(20px)!important

  .ba-what-we-do__title-text
    font-size: rem(25px);